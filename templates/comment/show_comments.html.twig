<div class="mt-5">
    <h2>Komentarze użytkowników:</h2>
    {% if article.comments %}
        {% for comment in article.comments %}
            <div class="card mt-3">
                <div class="card-header">
                    {{ comment.name ~ ' | ' ~ comment.createdAt|date('d.m.Y (H:i:s)') }}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">{{ comment.content }}</div>
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="col-sm-auto">
                                <a href="{{ path('delete_comment', {'commentId': comment.id }) }}"
                                    class="btn btn-outline-dark btn-sm">Usuń</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
