{% extends 'base.html.twig' %}

{% block title %}User Registration{% endblock %}

{% block body %}
    {{ parent() }}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_label(form.name, 'Imię:') }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}

        {{ form_label(form.surname, 'Nazwisko:') }}
        {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.surname) }}

        {{ form_label(form.email, 'Email:') }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}

        {{ form_label(form.plainPassword.first, 'Hasło:') }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_label(form.plainPassword.second, 'Powtórz hasło:') }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.second) }}

        <div class="my-2">
            {{ form_label(form.captchaCode, 'Przepisz kod z obrazka') }}
            {{ form_widget(form.captchaCode) }}
            {{ form_errors(form.captchaCode) }}
        </div>

        <div class="my-2">
            {{ form_widget(form.accept, {'attr': {'class': 'mr-2'}}) }}
            {{ form_label(form.accept, 'Akceptuję regulamin strony') }}
            {{ form_errors(form.accept) }}
        </div>

        {{ form_label(form.submit)}}
        {{ form_widget(form.submit, {'label': 'Rejestruj', 'attr': {'class': 'btn btn-primary'}}) }}


    {{ form_end(form) }}
{% endblock %}
