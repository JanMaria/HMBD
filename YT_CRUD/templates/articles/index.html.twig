{% extends 'base.html.twig' %}

{% block title %}YT_CRUD Articles{% endblock %}

{% block body %}
  {% if articles %}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Article Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for article in articles %}
          <tr>
            <td>{{ article.title }}</td>
            <td><a href="/article/{{ article.id }}" class="btn btn-primary">Show</a></td>
          </tr>
          {% endfor %}
        </tbody>
    </table>
  {% else %}
    <p>No articles to display</p>
  {% endif %}
{% endblock %}
